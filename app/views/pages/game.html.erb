<div class="text-center">
  <h1>Welcome to the longest word-game !</h1>
  <h3>Here is your grid:</h3>

  <% @grid.each do |letter| %>
  <%= letter %>
  <% end %>
</div>

<div class="text-center" id= "form">

  <form action="/score" method='get'>
    <label for="question">Give me a word!</label>
    <input type="text" id="answer" name="attempt" placeholder="">
    <input name="grid" type="hidden" value="<%= @grid %>"</input>
    <input class='btn btn-danger' type="submit" value="Go on!">
  </form>

</div>
